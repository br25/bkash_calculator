{
    "manifest_version": 3,
    "name": "Bkash Calculator",
    "version": "1.0.1",
    "description": "Calculate product price, delivery charge, Bkash percentage, total amount.",
    "icons": {
        "32": "icons/black_teeth.png"
    },          
    "permissions": ["scripting", "tabs", "activeTab"],
	"host_permissions": ["https://erp.closetcloudbd.com/invoice/*"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://erp.closetcloudbd.com/invoice/*"],
			"js": ["contentScript.js"]
		}
	],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "index.html",
      "default_icon": "icons/black_teeth.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["styles/style.css", "html2canvas.min.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  